/* pages/activityPhotos/activityPhotos.wxss */
.photoLists {
  margin-left: 10px;
  margin-right: 10px;
}
.header {
  margin-top: 20px;
  display: flex;
  justify-content: flex-start;
}

.headPortrait image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.personInfo {
  font-size: 14px;
  color: #333333;
  margin-left: 10px;
}

.photos image {
  width: 100%;
}
.footer {
  font-size: 13px;
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 10px;
}
.footer image{
  width: 20px;
  height: 20px;
}
.upload {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:5px 10px;
  background-color: #F7C643;
  border-radius: 50%;
}

.click {
  height: 100%;
  padding: 2px 10px;
  background-color: #F7C643;
  border-radius: 20px;
  display:flex;
  justify-content: center; 
  align-items: center;
}
.click > text {
  margin-right: 10px;
}