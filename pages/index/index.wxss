/**index.wxss**/
.header image {
  width: 100%;
  height: 160px;
}
.message_box{
  margin-top: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 27px;
  overflow: hidden;
}
.notice{
  background-color: #FF6D1D;
  color: white;
  padding: 5px;
  font-size: 13px;
  border-radius: 10px;
  margin-right: 10px;
}
.message_content{
  font-size: 12px;
}

.running {
  margin-top: 20px;
  margin-bottom: 20px;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.running > text {
  margin-right: 10px;
  color: #F78445;
  font-size: 13px;
}

.running > image {
  margin-right: 10px;
  width: 8px;
  height: 14px;
}

.items {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 10px;
}
.items_content {
  margin-top: 5px;
  margin-left: 10px;
  width: 100%;
}
.items_photo {
  margin-left: 10px;
  margin-right: 10px;
}
.items_photo image{
  width: 134px;
  height: 101px;
}
.items_time {
  display: flex;
  align-items: center;
  margin-top: 10px;
}
.items_time > image {
  width: 16.5px;
  height: 16.5px;
}
.items_time text {
  color: #333333;
  font-size: 13px;
  margin-left: 5px;
}
.items_addr > image {
  width: 15px;
  height: 19.5px;
}
.items_addr {
  display: flex;
  align-items: center;
    margin-top: 10px;
}
.items_addr text {
  color: #333333;
  font-size: 13px;
    margin-left: 5px;
}

.items_title {
  font-family:SourceHanSansCN-Regular;
  color: #000000;
  font-size: 16px;
}

.swich {
  margin-bottom: 30px;
}
.swich text{
  font-size: 14px;
}
.swich text:first-child {
  margin-left: 10px;
}
.swich text:not(:first-child) {
  margin-left: 30px;
  color: #333333;
}
.menber {
  font-size: 12px;
  color: #333333;
  display: flex;
  justify-content: flex-end;
  margin-top: 10px;
  margin-right: 10px;
}